<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleCompraActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:stretchColumns="1"
        tools:ignore="MissingConstraints">

        <TableRow android:background="#ACDBDF">


            <TextView
                android:layout_column="0"
                android:padding="1dip"
                android:text="Producto"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_column="2"
                android:padding="1dip"
                android:text="Subtotal"
                android:textColor="@android:color/black"/>

        </TableRow>

        <TableRow>


            <TextView
                android:id="@+id/nombre1TextView"
                android:layout_column="0"
                android:padding="1dip"
                android:text="Nombre: " />

            <TextView
                android:id="@+id/precio1TextView"
                android:layout_column="2"
                android:gravity="left"
                android:padding="1dip"
                android:text="Precio: " />

        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090"/>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="1dip"
                android:text="Subtotal"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/precio2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:gravity="right"
                android:padding="1dip"
                android:text="Precio:"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="1dip"
                android:text="Iva"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/ivaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:gravity="right"
                android:padding="1dip"
                android:text="IVA: "/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:padding="1dip"
                android:text="subtotal"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/SubtotalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:gravity="right"
                android:padding="1dip"
                android:text="Subtotal: "/>

        </TableRow>

        <TableRow android:background="#ACDBDF">
            <Button
                android:id="@+id/btnCompar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:backgroundTint="@color/blue_navy"
                android:text="Comprar"
                android:textAllCaps="false"
                android:onClick="finalizarActividad"/>
        </TableRow>


        <TableRow android:background="#ACDBDF">
            <Button
                android:id="@+id/btnHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:backgroundTint="@color/blue_navy"
                android:text="Historial"
                android:textAllCaps="false"
                android:onClick="finalizarActividad"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
